# Trello API Credentials
# Get yours from: https://trello.com/app-key
TRELLO_API_KEY=YOUR_TRELLO_API_KEY_HERE
TRELLO_API_TOKEN=YOUR_TRELLO_API_TOKEN_HERE

# Trello Board ID
# Find it in the URL of your Trello board (e.g., https://trello.com/b/BOARD_ID/board-name)
TRELLO_BOARD_ID=YOUR_TRELLO_BOARD_ID_HERE

# Database URL
# Default is a local SQLite file named 'task.db' in the project root
DATABASE_URL=sqlite:///task.db

# Scheduler Settings (Optional - defaults are used if not set)
# REMIND_BEFORE_SEC=300     # How many seconds before due date to start reminding (default: 5 minutes)
# REMIND_WINDOW_SEC=60      # How long the reminder window lasts in seconds (default: 1 minute)
# CHECK_INTERVAL_SEC=30     # How often to check for reminders in seconds (default: 30 seconds)
# POLL_INTERVAL=60          # How often to poll Trello for changes in seconds (default: 60 seconds)

# Slack Settings
SLACK_BOT_TOKEN=xoxb-YOUR-SLACK-BOT-TOKEN-HERE
SLACK_TARGET_USER_ID=YOUR_SLACK_USER_ID_HERE # User ID to send DMs to
